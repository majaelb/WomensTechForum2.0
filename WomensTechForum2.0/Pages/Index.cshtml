@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<section class="banner">
    <img src="img/banner-g704a4f908_1280.jpg" />
    <div class="banner-text">
        <h1>Välkommen till <span class="text-warning">ett forum för kvinnor i tech-branschen!</span></h1>
        <p class="lead my-4">
            Vi erbjuder de senaste nyheterna inom tech och intressanta diskussioner i våra forum
        </p>
        <button class="btn btn-warning btn-lg" data-bs-toggle="modal" data-bs-target="#enroll">
            Bli medlem här för att joina vårt community
        </button>
    </div>
</section>

<section class="news my-5">
    <h1 class="text-center text-uppercase">Nyheter</h1>
    <div class="header-bar mx-auto my-4"></div>
    <div class="container">
        <div class="row text-center g-4">
            @*            @for (int i = 0; i < 6; i++)
            {*@
            @foreach (var article in Model.News)
            {
                <div class="col-md-4">
                    <div class="card rounded-0 p-3">
                        @*<div class="card-img-top">*@
                            <img src="@article.UrlToImage">
                        @*</div>*@
                        <h3 class="card-title mb-3">
                            @article.Title
                        </h3>
                        <p class="card-text">
                            @article.Description
                        </p>
                        <a href="#" class="text-uppercase fw-bolder text-decoration-none text-black">Läs mer <i class="bi bi-chevron-double-right"></i></a>

                    </div>
                </div>
            }

        </div>
    </div>



</section>




<section class="text-light p-5 p-lg-0 pt-lg-5 text-center text-sm-start min-vh-100">
    <div class="container ">

        @*--Citat--*@
        <article class="postcard dark-card text-white py-1 px-4 m-2">
            <div class="postcard-text">

                <p class="lead text-warning"><i style="font-size:xx-large" class="text-white bi bi-chat-square-quote"></i> @Model.RandomQuote.Citation</p>

            </div>
        </article>
    </div>
</section>

